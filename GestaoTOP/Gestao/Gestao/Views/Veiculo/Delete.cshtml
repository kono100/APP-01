        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModal">Apagar Veiculo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Excluir Veiculo @Model.Placa.ToUpper()?</p>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="VeiculoID" />
                        <button type="submit" value="Remover" class="btn btn-danger" /> Remover <img src="~/Img/IconTrash.svg" alt="Alternate Text" height="15px" /></button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Fechar <img src="~/Img/IconCancelar.svg" alt="Alternate Text" height="15px" /></button>
