@model IEnumerable<Gestao.Models.Veiculo>

@{
    ViewData["Title"] = "Veiculo MRV ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Veiculo</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning" role="alert">@TempData["Message"]</div>
}




<p>
    <a class="btn btn-primary" asp-action="Create">Criar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Nome) *@ Placa
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Tag)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.HrEntTer)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.HrSaiTer)
            </th>

@*             <th>
                @Html.DisplayNameFor(model => model.HrSegunda)
            </th> *@


            <th>
                @Html.DisplayNameFor(model => model)Dias Permitidos
            </th>




            <th>
                @Html.DisplayNameFor(model => model.Morador) Associado
            </th>

            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Cor)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Tag)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.HrEntTer)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.HrSaiTer)
                </td>

@*                 <td>
                    @if(item.Segunda == true)
                    {
                        <text>Seg, </text>  
                    }

                    @if (item.Terca == true)
                    {
                        <text>Ter, </text>
                    }

                    @if (item.Quarta == true)
                    {
                        <text>Qua, </text>
                    }

                    @if (item.Quinta == true)
                    {
                        <text>Qui, </text>
                    }

                    @if (item.Sexta == true)
                    {
                        <text>Sex, </text>
                    }

                    @if (item.Sabado == true)
                    {
                        <text>Sab, </text>
                    }

                    @if (item.Domingo == true)
                    {
                        <text>Dom, </text>
                    }

                    @if (item.Todos_os_Dias == true)
                    {
                        <text>Permitido Todos</text>
                    }

                </td> *@

                <td>
                    @if (item.Todos_os_Dias == true)
                    {
                        <text>Todos Dias Permitido</text>
                    }

                    else
                    {

                        @if (item.Sabado == true && item.Domingo == true && item.Segunda == false && item.Terca == false && item.Quarta == false && item.Quinta == false && item.Sexta == false)
                        {
                            <text>Apenas Final de semana </text>
                        }
                        else
                        {

                            @if (item.Segunda == true)
                            {
                                <text>Seg, </text>
                            }

                            @if (item.Terca == true)
                            {
                                <text>Ter, </text>
                            }

                            @if (item.Quarta == true)
                            {
                                <text>Qua, </text>
                            }

                            @if (item.Quinta == true)
                            {
                                <text>Qui, </text>
                            }

                            @if (item.Sexta == true)
                            {
                                <text>Sex, </text>
                            }

                            @if (item.Sabado == true)
                            {
                                <text>Sab, </text>
                            }

                            @if (item.Domingo == true)
                            {
                                <text>Dom</text>
                            }
                        }

                }
                </td>




                <td>
                    @Html.DisplayFor(modelItem => item.Morador.Nome)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.VeiculoID">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.VeiculoID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.VeiculoID">Delete</a>
                </td>
            </tr>
        }







    </tbody>
</table>
